{% macro blogPost(data) %}
   <a href={{data.url}}>
        <div class="flex flex-col h-full hover:shadow-sm transition-all duration-200 zoom-card-animation animate-fade-in-down">
            <div class="w-full flex-grow relative">
                <img src="{{data.img}}" alt="post cover" class="rounded-t-lg object-cover h-full w-full " />
            </div>
            <div class="py-6 px-4 text-center bg-zinc-100 dark:bg-zinc-800 dark:bg-slate rounded-b-lg flex justify-between z-20">
                <div class="text-left">
                    <p class="text-xs uppercase font-bold pb-4 text-slate-400 font-lato">
                        {{data.category}}
                    </p>
                    <h4 class="text-gray-600 dark:text-zinc-300">{{data.title}}</h4>
                </div>
                <div class="text-right">
                    <p class="text-xs whitespace-nowrap uppercase font-bold pb-4 text-slate-400 font-lato">
                        {{data.date | formatDate}}
                    </p> 
                </div>
            </div>
        </div>
    </a>
{% endmacro %} 