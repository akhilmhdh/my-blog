{% macro blogPost(title,description,category,img) %}
    <div class="flex flex-col">
        <div class="w-full">
            <img src={{img}} alt="post cover" class="rounded-t-md" />
        </div>
        <div class="pb-12 pt-8 px-4 text-center bg-gray-100 rounded-b-md">
            <p class="text-sm uppercase font-bold py-4 opacity-50 font-lato">
                {{category}}
            </p>
            <h4>{{title}}</h4>
        </div>
    </div>
{% endmacro %} 