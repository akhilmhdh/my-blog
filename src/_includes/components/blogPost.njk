{% macro blogPost(data) %}
   <a href={{data.url}}>
        <div class="flex flex-col h-full hover:shadow-sm transition-all duration-200 zoom-card-animation animate-fade-in-down">
            <div class="w-full flex-grow relative">
                <img src="{{data.img}}" alt="post cover" class="rounded-md object-cover h-full w-full" />
            </div>
            <div class="py-4 px-1 text-center bg-white dark:bg-zinc-900 rounded-b-lg flex justify-between z-20">
                <div class="text-left">
                    <p class="text-xxs uppercase pb-2 text-slate-400 font-lato tracking-widest">
                        {{data.category}}
                    </p>
                    <h5 class="text-gray-600 dark:text-zinc-300">{{data.title}}</h5>
                </div>
                <div class="text-right">
                    <p class="text-xxs whitespace-nowrap uppercase pb-2 text-slate-400 font-lato">
                        {{data.date | formatDate}}
                    </p> 
                </div>
            </div>
        </div>
    </a>
{% endmacro %} 