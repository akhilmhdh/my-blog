{% from "components/icons.njk" import facebookIcon,linkedinIcon,twitterIcon,mailIcon %}

{% set js %}
  {% include "js/buildSocialMediaURL.js" %}
{% endset %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/blog.css" />
    <title>{{ title }}</title>
</head>

<body class="h-screen m-0 px-4 pt-6 flex flex-col">
    <header>
        {% include "partials/nav.njk" %}
    </header>
    <main class="flex-grow py-12">
        <section class=" flex flex-col items-center text-center mb-8">
            <div class="mb-8">
                <h1 class="mb-2">
                    {{title}}
                </h1>
                <span class="text-xs uppercase font-bold opacity-50 font-lato">
                    {{tags[0]}}
                </span>
            </div>
            <div class="w-full max-w-4xl">
                <img src="{{cover.image}}" alt="cover" class="w-full rounded-md mb-4 object-cover"/>
                <cite class="text-sm italic text-gray-500">
                    {{cover.caption}}
                </cite>
            </div>
        </section>
        <div class="sticky top-48 float-left p-4">
            {% blogIndex %}
        </div>
        <div class="shadow-md sticky top-48 float-right flex flex-col gap-4 p-4 border-cream rounded-md border">
            <a  class="text-gray-600 hover:text-primary transition-all" id="share-twitter"  target="_blank" rel="noopener noreferrer">
                    {{twitterIcon(32,32)}}
            </a>
             <a  id="share-linkedin" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary transition-all">
                    {{linkedinIcon(32,32)}}
            </a>
             <a class="text-gray-600 hover:text-primary transition-all" id="share-mail"  target="_blank" rel="noopener noreferrer">
                    {{mailIcon(32,32)}}
            </a>
             <a class="text-gray-600 hover:text-primary transition-all" id="share-facebook"  target="_blank" rel="noopener noreferrer">
                    {{facebookIcon(32,32)}}
            </a>
        </div>
        <section class="mx-auto w-full max-w-3xl leading-7">
            <div class="text-2xl leading-7 font-bold text-gray-500 mb-8">
                {{description}}
            </div>
            {{ content | safe }}
        </section>
    </main>
    {% include "partials/footer.njk" %}
    <script>
        {{ js | jsmin | safe }}
    </script>
</body>

</html>