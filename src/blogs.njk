---
title: My Blogs
layout: base
---

{% from "components/blogPost.njk" import blogPost %}

<section class="w-full flex flex-col mb-4  mx-auto max-w-5xl">
    <div class="py-4 border-b border-grey-lighter mb-8">
        <h3>
            My Blogs
        </h3>
    </div>
    <div class="grid grid-cols-6 gap-6">
        {%- for blog in collections.blogs | reverse -%}
            <div class="col-span-2">
                {{
                    blogPost({
                        title: blog.data.title,
                        description: blog.data.description,
                        category: blog.data.tags[0],
                        img: blog.data.cover,
                        url: blog.url
                    }) 
                }}
            </div>
        {%- endfor -%}
        </div>
    </div>
</section>